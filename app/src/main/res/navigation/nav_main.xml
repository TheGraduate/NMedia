<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/newPostFragment"
        android:name="ru.netology.nmedia.activityAndfragments.NewPostFragment"
        android:label="fragment_new_post"
        tools:layout="@layout/fragment_new_post" />
    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.netology.nmedia.activityAndfragments.FeedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" >
        <action
            android:id="@+id/action_feedFragment_to_newPostFragment"
            app:destination="@id/newPostFragment"
            tools:layout="@layout/fragment_feed"/>
        <action
            android:id="@+id/action_feedFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />


        <action
            android:id="@+id/action_feedFragment_to_postFragment"
            app:destination="@id/postFragment">

        <argument
            android:name="postId"
            app:argType="integer" />
        </action>

    </fragment>
    <fragment
        android:id="@+id/editPostFragment"
        android:name="ru.netology.nmedia.activityAndfragments.EditPostFragment"
        android:label="EditPostFragment" />
    <fragment
        android:id="@+id/postFragment"
        android:name="ru.netology.nmedia.activityAndfragments.PostFragment"
        android:label="PostFragment" >
        <action
            android:id="@+id/action_postFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
        <action
            android:id="@+id/action_postFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <argument
            android:name="postId"
            app:argType="integer" />
    </fragment>
</navigation>